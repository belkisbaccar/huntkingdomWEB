{% extends 'backoffice.html.twig' %}

{% block content %}

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Modifier Evenements</h4>
                <p class="card-description">
                    Evenements
                </p>
                {{ form_start(form, { 'attr' : { 'class' : 'sample-sample' } }) }}
                <div class="form-group">
                    <label for="exampleInputName1">Titre du Evenement</label>
                    {{ form_widget(form.titreEvent, { 'attr' : { 'class' : 'form-control' } } ) }}
                </div>
                <div class="form-group">

                    <label for="exampleInputEmail3">Image Précédente </label>

                    <img src="{{ asset('imagesEvent/') }}{{Evenement.image}}"  style="width: 200px ; height: 100px" class="form-control">

                </div>
                <div class="form-group">

                    <label for="exampleInputEmail3">Image</label>
                    {{ form_widget(form.file, { 'attr' : { 'class' : 'dropify' } } ) }}


                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Date Debut</label>

                    <div  class="input-group date datepicker">

                        {{ form_widget(form.dateDebutEvent, { 'attr' : { 'class' : 'form-control'} } ) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Date Fin</label>



                    <div  class="input-group date datepicker">
                        {{ form_widget(form.dateFinEvent, { 'attr' : { 'class' : 'form-control' } } ) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">nombre de Place</label>

                    {{ form_widget(form.nbPlaceEvent, { 'attr' : { 'class' : 'form-control' } } ) }}

                </div>
                {{ form_widget(form) }}
                <input  class="btn btn-info"  id="submit11" type="submit" value="Confirmer" />

                <button class="btn btn-light">Cancel</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}