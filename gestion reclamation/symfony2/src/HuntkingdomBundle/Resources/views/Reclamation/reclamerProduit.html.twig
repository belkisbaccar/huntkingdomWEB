{% extends 'backoffice.html.twig' %}
{% block content %}
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ajouter Reclamation</h4>
                <p class="card-description">
                    Reclamation d'un produit
                </p>

                {{ form_start(form, { 'attr' : { 'class' : 'sample-sample' } }) }}

                <div class="form-group">
                    <label for="exampleInputEmail3">description</label>
                    {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } },{'value' : 'Default title'} ) }}
                </div>
                <div class="form-group" >
                    <label for="exampleInputPassword4">Image</label>
                    {{ form_widget(form.file, { 'attr' : { 'class' : 'dropify' } } ) }}


                </div>
                <div class="form-group" hidden>
                    <label for="exampleInputEmail3">Etat</label>
                    {{ form_widget(form.etat, { 'attr' : { 'class' : 'form-control' } } ) }}
                </div>
                {{ form_widget(form.reclamer, { 'attr' : { 'class' : 'btn btn-gradient-primary mr-2' } } ) }}

                <button class="btn btn-light">Cancel</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}