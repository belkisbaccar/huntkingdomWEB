{% extends 'backoffice.html.twig' %}
{% block content %}
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Traiter Reclamation</h4>
                <p class="card-description">
                    Changer l'etat d'une reclamation
                </p>

                {{ form_start(form, { 'attr' : { 'class' : 'sample-sample' } }) }}

                <div class="form-group">
                    <label for="exampleInputEmail3">Etat</label>
                    {{ form_widget(form.etat, { 'attr' : { 'class' : 'form-control' } } ) }}
                </div>
                <div> <label for="exampleInputEmail3">description</label>
                    <fieldset class="form-control">
                        {{ reclamation.description }}
                    </fieldset>
                </div>
                <div class="form-group" hidden>
                    <label for="exampleInputEmail3">description</label>
                    {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control'}} ) }}
                </div>


                <div class="form-group">

                    <label for="exampleInputEmail3">Image</label>

                    <img src="{{ asset('images/') }}{{ reclamation.image }}" style="width: 200px ; height: 100px" class="form-control">

                </div>
                <div class="form-group" hidden>
                    <label for="exampleInputPassword4">Image</label>
                    {{ form_widget(form.file, { 'attr' : { 'class' : 'dropify' } } ) }}


                </div>




                {{ form_widget(form) }}
                <input  class="btn1"  id="submit" type="submit" value="reclamer" />
                <button class="btn2">Cancel</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}