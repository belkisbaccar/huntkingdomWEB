{% extends 'backoffice.html.twig' %}
{% block content %}
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Modifier Reponse</h4>
                <p class="card-description">
                    Changer les parametres d'une reponse
                </p>
                {{ form_start(form, { 'attr' : { 'class' : 'sample-sample' } }) }}

                <div class="form-group">
                    <label for="exampleInputEmail3">Description</label>
                    {{ form_widget(form.contenu, { 'attr' : { 'class' : 'form-control' } } ) }}
                </div>
                <div class="form-group">

                    <label for="exampleInputEmail3">Image Précédente </label>

                    <img src="{{ asset('images/') }}{{ reponse.image }}" style="width: 200px ; height: 100px" class="form-control">

                </div>
                <div class="form-group" >
                    <label for="exampleInputPassword4">Image</label>
                    {{ form_widget(form.file, { 'attr' : { 'class' : 'dropify' } } ) }}


                </div>

                {{ form_widget(form.repondre, { 'attr' : { 'class' : 'btn btn-gradient-primary mr-2' } } ) }}

                <button class="btn btn-light">Cancel</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}