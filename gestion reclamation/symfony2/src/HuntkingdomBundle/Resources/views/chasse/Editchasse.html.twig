{% extends 'backoffice.html.twig' %}

{% block content %}

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Modifer Chasse</h4>
                <p class="card-description">
                    Chasse
                </p>
                {{ form_start(form, { 'attr' : { 'class' : 'sample-sample' } }) }}
                <div class="form-group">
                    <label for="exampleInputName1">Region</label>
                    {{ form_widget(form.region, { 'attr' : { 'class' : 'form-control' } } ) }}
                </div>


                <div class="form-group">
                    <label for="exampleInputEmail3">Date Debut</label>


                    {{ form_widget(form.dateDebut, { 'attr' : { 'class' : 'form-control'} } ) }}

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Date Fin</label>


                    {{ form_widget(form.dateFin, { 'attr' : { 'class' : 'form-control' } } ) }}

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Animal</label>

                    {{ form_widget(form.animal, { 'attr' : { 'class' : 'form-control' } } ) }}

                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Type</label>
                    {{ form_widget(form.type, { 'attr' : { 'class' : 'form-control' } } ) }}
                </div>
                {{ form_widget(form) }}
                <input  class="btn btn-info"  id="submit" type="submit" value="Confirmer" />

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}