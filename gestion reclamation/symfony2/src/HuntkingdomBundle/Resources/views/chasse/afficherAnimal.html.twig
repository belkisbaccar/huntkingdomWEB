{% extends 'backoffice.html.twig' %}
{% block content %}

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Data table</h4>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="order-listing" class="table">
                            <thead>
                            <tr>

                                <th>Nom</th>
                                <th>Race</th>
                                <th>Image</th>

                                <th style="width: 60px; ">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for e in animal %}
                                <tr>


                                    <td >{{e.nom}}</td>
                                    <td> {{e.race}}</td>
                                    <td><img src="{{ asset('imagesAnimal/') }}{{e.image}}" ></td>
                                    <td >
                                        <a href = "{{path ('animal_deleteAnimal',{'id' : e.id}) }} "  class="btn btn-inverse-primary btn-fw">Supprimer</a>

                                        <a href= "{{path ('animal_modifAnimal',{'id' : e.id}) }} " class="btn btn-inverse-success btn-fw" >Modifier</a>


                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


