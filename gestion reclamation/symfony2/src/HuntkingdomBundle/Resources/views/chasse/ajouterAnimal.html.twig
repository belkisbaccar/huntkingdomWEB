{% extends 'backoffice.html.twig' %}

{% block content %}

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ajouter Animal</h4>
                <p class="card-description">
                    Chasse
                </p>
                {{ form_start(form, { 'attr' : { 'class' : 'sample-sample' } }) }}
                <div class="form-group">
                    <label for="exampleInputName1">Nom</label>
                    {{ form_widget(form.nom, { 'attr' : { 'class' : 'form-control' } } ) }}
                </div>


                <div class="form-group">
                    <label for="exampleInputPassword4">Image Animal</label>

                    {{ form_widget(form.file, { 'attr' : { 'class' : 'form-control' } } ) }}

                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Race</label>
                    {{ form_widget(form.race, { 'attr' : { 'class' : 'form-control' } } ) }}
                </div>
                {{ form_widget(form) }}
                <input  class="btn btn-info"  id="submit" type="submit" value="Confirmer" />
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}