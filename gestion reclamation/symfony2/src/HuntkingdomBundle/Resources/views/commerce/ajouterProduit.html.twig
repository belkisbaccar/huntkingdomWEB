{% extends 'backoffice.html.twig' %}
{% block content %}
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ajouter Produits</h4>

                {%for message in app.flashes('info') %}
                <div class="alert alert-info" role="alert">
                    {{ message }}
                </div>
            </div>
            {% endfor %}

            <p class="card-description">

            </p>

            {{ form_start(form, { 'attr' : { 'class' : 'sample-sample' } }) }}
            <div class="form-group">
                <label for="exampleInputName1">Nom du produit</label>
                {{ form_widget(form.nom, { 'attr' : { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">quantite</label>
                {{ form_widget(form.quantite, { 'attr' : { 'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">prix</label>
                {{ form_widget(form.prix, { 'attr' : { 'class' : 'form-control' } } ) }}
            </div>

            <div class="form-group">

                <label>File upload</label>

                <input type="file"   accept=".png,.jpg,.jpeg"  name="img[]" class="file-upload-default">
                <div class="input-group col-xs-12">


                    {{ form_widget(form.image, { 'attr' : { 'class' : 'form-control' } } ) }}

                </div>

            </div>


            {{ form_widget(form.ajouter, { 'attr' : { 'class' : 'btn btn-outline-info btn-fw' } } ) }}

            <button type="button" class="btn btn-outline-danger btn-fw">Cancel</button>

            {{ form_end(form) }}
        </div>
    </div>
    </div>

{% endblock %}
